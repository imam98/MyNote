<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:custom="clr-namespace:MyNote.CustomControl"
             x:Class="MyNote.NotePage">

    <ContentPage.Content>
        <StackLayout Spacing="4">
            <Entry x:Name="TitleEntry" Placeholder="Note Title" FontSize="24"/>
            <custom:ContentEditor x:Name="NoteEditor" FontSize="16" VerticalOptions="FillAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>